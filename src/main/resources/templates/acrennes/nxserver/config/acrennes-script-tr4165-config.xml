<?xml version="1.0"?>
<component name="fr.toutatice.script.tr4165.config">

	<require>org.nuxeo.ecm.core.operation.OperationServiceComponent</require>

	<extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent" point="chains">

		<chain id="CH-SET-SHORTNAME">
			<operation id="Document.SetDocumentShortName">
				<param name="Override" type="boolean">true</param>
			</operation>
		</chain>

		<chain id="CH-SET-ONLINE">
			<operation id="Document.SetOnLineOperation" />
		</chain>

                <chain id="CH-SET-SHORTNAME-ONLINE">
                        <operation id="Document.SetDocumentShortName">
                                <param name="Override" type="boolean">true</param>
                        </operation>
                        <operation id="Document.SetOnLineOperation" />
                </chain>

		<chain id="CH-RESET-DC:NATURE">
			<operation id="Document.SetProperty">
				<param type="serializable" name="value"></param>
				<param type="string" name="xpath">dc:nature</param>
				<param type="boolean" name="save">true</param>
			</operation>
		</chain>

	</extension>

</component>

