<?xml version="1.0"?>
<component name="acrennes-usermanager-config">

  <require>org.nuxeo.ecm.directory.sql.storage</require>
  <require>org.nuxeo.ecm.platform.usermanager.UserManagerImpl</require>

  <extension target="org.nuxeo.ecm.platform.usermanager.UserService"
    point="userManager">
    <userManager>
      <users>
	<directory>userLdapDirectory</directory> 
        <searchFields append="true">
          <substringMatchSearchField>username</substringMatchSearchField>
          <substringMatchSearchField>firstName</substringMatchSearchField>
          <substringMatchSearchField>lastName</substringMatchSearchField>
        </searchFields>
       <listingMode>search_only</listingMode>
        <anonymousUser id="utilisateur-invité">
          <property name="firstName">Utilisateur</property>
          <property name="lastName">Invité (compte anonyme)</property>
        </anonymousUser>
	<virtualUser id="ssoadmin" searchable="false">
            <property name="firstName">ssoadmin</property>
            <property name="lastName">ssoadmin</property>
            <group>administrators</group>
            <group>members</group>
           </virtualUser>
        <virtualUser id="ssomember" searchable="false">
            <property name="firstName">ssomember</property>
            <property name="lastName">ssomember</property>
            <group>members</group>
        </virtualUser>
       <virtualUser id="ssoagent" searchable="false">
            <property name="firstName">ssoagent</property>
            <property name="lastName">ssoagent</property>
            <group>agents</group>
            <group>members</group>
         </virtualUser>      
       <virtualUser id="vu-rectorat" searchable="false">
            <property name="firstName">vu-rectorat</property>
            <property name="lastName">vu-rectorat</property>
            <group>Rectorat_Tous</group>
         </virtualUser>      
       <virtualUser id="vu-seria" searchable="false">
            <property name="firstName">vu-seria</property>
            <property name="lastName">vu-seria</property>
            <group>SERIA_Tous</group>
         </virtualUser>      
       <virtualUser id="vu-seriat" searchable="false">
            <property name="firstName">vu-seriat</property>
            <property name="lastName">vu-seriat</property>
            <group>SERIA-T_Tous</group>
         </virtualUser>      
       <virtualUser id="vu-dafpic" searchable="false">
            <property name="firstName">vu-dafpic</property>
            <property name="lastName">vu-dafpic</property>
            <group>dafpic_tous</group>
         </virtualUser>      
       <virtualUser id="vu-acrennes-dir" searchable="false">
            <property name="firstName">vu-acrennes-dir</property>
            <property name="lastName">vu-acrennes-dir</property>
            <group>ac-rennes_DIR</group>
         </virtualUser>      
       <virtualUser id="vu-acrennes-ens" searchable="false">
            <property name="firstName">vu-acrennes-ens</property>
            <property name="lastName">vu-acrennes-ens</property>
            <group>ac-rennes_ENS</group>
         </virtualUser>      
       <virtualUser id="vu-acrennes-ele" searchable="false">
            <property name="firstName">vu-acrennes-ele</property>
            <property name="lastName">vu-acrennes-ele</property>
            <group>ac-rennes_ELE</group>
         </virtualUser>      
       <virtualUser id="vu-0352686e-dir" searchable="false">
            <property name="firstName">vu-0352686e-dir</property>
            <property name="lastName">vu-0352686e-dir</property>
            <group>0352686E_DIR</group>
         </virtualUser>      
       <virtualUser id="vu-administrators" searchable="false">
            <property name="firstName">vu-admin</property>
            <property name="lastName">vu-admin</property>
            <group>Administrators</group>
         </virtualUser>
	</users>
	<defaultAdministratorId>Administrator</defaultAdministratorId>
        <administratorsGroup>SuperAdministrators</administratorsGroup>
        <disableDefaultAdministratorsGroup>true</disableDefaultAdministratorsGroup>
      <groups>
        <directory>groupLdapDirectory</directory>
      </groups>
      <defaultGroup>members</defaultGroup>
      <groupSortField>groupname</groupSortField>
      <userSortField>lastName</userSortField>
    </userManager>
  </extension>
  
</component>

